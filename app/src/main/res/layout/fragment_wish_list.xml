<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/messenger_button_blue_bg_selector"
    tools:context="com.example.sharma.wishlist.wish_list">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center|center_horizontal"
        android:text="Create Your Wish"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />

    <LinearLayout
        android:id="@+id/layout_Clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_MakeWish"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorPrimaryDark"
            android:padding="20dp"
            android:text="Make A Wish"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_Exit"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/com_facebook_blue"
            android:padding="20dp"
            android:text="EXIT"
            android:textSize="15dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_makewish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_Clear"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/edtMakeWish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center|center_horizontal"
            android:hint="Write Your Wish here"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnSaveDATA"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@color/colorPrimaryDark"
            android:text="SAVE"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            android:background="@color/com_facebook_button_background_color"
            android:text="BACK"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>
