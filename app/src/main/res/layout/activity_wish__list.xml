<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wish__list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2e2cd"
    tools:context="com.example.sharma.wishlist.wish_List">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center|center_horizontal"
        android:text="Dreams"
        android:layout_marginTop="60dp"
        android:textColor="#D50000"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#000000"
        />

    <LinearLayout
        android:id="@+id/layout_Clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_MakeWish"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:padding="20dp"
            android:text="Make A Wish"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_makewish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_Clear"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/edtMakeWish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center|center_horizontal"
            android:hint="Write Your Wish here"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnSaveDATA"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:text="SHARE"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnViewList"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:text="View Wish list"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
